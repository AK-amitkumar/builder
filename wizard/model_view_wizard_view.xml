<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="builder_ir_model_view_config_wizard_form_view">
            <field name="name">builder.ir.model.view.config.wizard.form</field>
            <field name="model">builder.ir.model.view.config.wizard</field>
            <field name="arch" type="xml">
                <form string="View Generator">
                    <group>
                        <group>
                            <field name="model_id" invisible="1"/>
                            <field name="model_groups_date_field_ids" invisible="1"/>
                            <field name="form_view"/>
                            <field name="tree_view"/>
                            <field name="search_view"/>
                        </group>
                        <group>
                            <field name="graph_view"/>
                            <field name="calendar_view" attrs="{'readonly': [('model_groups_date_field_ids', '=', [])]}"/>
                            <field name="gantt_view" attrs="{'readonly': [('model_groups_date_field_ids', '=', [])]}"/>
                            <field name="diagram_view" invisible="1"/>
                        </group>
                    </group>
                    <notebook attrs="{'invisible': [('form_view', '=', False), ('tree_view', '=', False), ('graph_view', '=', False), ('calendar_view', '=', False), ('search_view', '=', False)]}">
                        <page string="Form View" attrs="{'invisible': [('form_view', '=', False)]}">
                            <group>
                                <group>
                                    <field name="form_attr_string" attrs="{'required': [('form_view', '=', True)], 'readonly': [('form_view', '=', False)]}"/>
                                    <field name="form_view_id" attrs="{'required': [('form_view', '=', True)], 'readonly': [('form_view', '=', False)]}" />
                                    <field name="form_attr_create" attrs="{'readonly': [('form_view', '=', False)]}" />
                                    <field name="form_attr_edit" attrs="{'readonly': [('form_view', '=', False)]}" />
                                    <field name="form_attr_delete" attrs="{'readonly': [('form_view', '=', False)]}" />
                                </group>
                                <group>
                                    <field name="special_states_field_id" invisible="1" />
                                    <field name="form_show_status_bar" />
                                    <field name="form_states_clickable" attrs="{'invisible': ['|', ('form_show_status_bar', '=', False), ('special_states_field_id', '=', False)]}" />
                                    <field name="form_visible_states" attrs="{'invisible': ['|', ('form_show_status_bar', '=', False), ('special_states_field_id', '=', False)]}" />
                                </group>
                            </group>
                            <notebook>
                                <page string="Fields">
                                    <field name="form_field_ids" nolabel="1" attrs="{'readonly': [('form_view', 'not in', [True])], 'required': [('form_view', 'in', [True])]}">
                                        <tree string="Fields" context="{'default_special_states_field_id': parent.special_states_field_id, 'default_model_id': model_id}">
                                            <field name="sequence" widget="handle" />
                                            <field name="field_id" />
                                            <field name="widget" />
                                            <field name="required" />
                                            <field name="invisible" />
                                            <field name="readonly" />
                                            <field name="states" />
                                            <field name="page_id" />
                                        </tree>
                                    </field>
                                </page>
                                <page string="Actions" attrs="{'invisible': [('form_show_status_bar', '=', False)]}">
                                    <field name="form_statusbar_button_ids" nolabel="1">
                                        <tree string="Actions">
                                            <field name="sequence" widget="handle"/>
                                            <field name="name"/>
                                            <field name="type"/>
                                            <field name="states"/>
                                            <field name="highlighted"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Buttons">

                                </page>
                                <page string="Arch">
                                    <group>
                                        <group></group>
                                        <group>
                                            <field name="form_view_custom_arch" />
                                        </group>
                                    </group>
                                    <field name="form_view_arch" nolabel="1" widget="ace" theme="tomorrow" mode="xml" style="min-height:200px" attrs="{'readonly': [('form_view_custom_arch', '=', False)]}"/>
                                </page>
                            </notebook>
                        </page>
                        <page string="Tree View" attrs="{'invisible': [('tree_view', '=', False)]}">
                            <group>
                                <group>
                                    <field name="tree_attr_string" attrs="{'required': [('tree_view', '=', True)], 'readonly': [('tree_view', '=', False)]}"/>
                                    <field name="tree_view_id" attrs="{'required': [('tree_view', '=', True)], 'readonly': [('tree_view', '=', False)]}" />
                                    <field name="tree_attr_create" attrs="{'readonly': [('tree_view', '=', False)]}" />
                                    <field name="tree_attr_edit" attrs="{'readonly': [('tree_view', '=', False)]}" />
                                    <field name="tree_attr_delete" attrs="{'readonly': [('tree_view', '=', False)]}" />
                                </group>
                                <group>
                                    <field name="tree_attr_toolbar" />
                                    <field name="tree_attr_colors" />
                                    <field name="tree_attr_fonts" />
                                </group>
                            </group>
                            <notebook>
                                <page string="Fields">
                                    <field name="tree_field_ids" nolabel="1" context="{'default_special_states_field_id': special_states_field_id, 'default_model_id': model_id}">
                                        <tree string="Fields" >
                                            <field name="sequence" widget="handle" />
                                            <field name="field_id" />
                                            <field name="widget" />
                                            <field name="invisible" />
                                            <field name="readonly" />
                                            <field name="domain" />
                                        </tree>
                                    </field>
                                </page>
                                <page string="Arch">
                                    <group>
                                        <group></group>
                                        <group>
                                            <field name="tree_view_custom_arch" />
                                        </group>
                                    </group>
                                    <field name="tree_view_arch" nolabel="1" widget="ace" theme="tomorrow" mode="xml" style="min-height:200px" attrs="{'readonly': [('tree_view_custom_arch', '=', False)]}"/>
                                </page>
                            </notebook>
                        </page>
                        <page string="Search View" attrs="{'invisible': [('search_view', '=', False)]}">
                            <group>
                                <group>
                                    <field name="search_attr_string" attrs="{'required': [('search_view', '=', True)], 'readonly': [('search_view', '=', False)]}"/>
                                    <field name="search_view_id" attrs="{'required': [('search_view', '=', True)], 'readonly': [('search_view', '=', False)]}" />
                                </group>
                                <group>
                                </group>
                            </group>
                            <notebook>
                                <page string="Items">
                                    <field name="search_item_ids" nolabel="1">
                                        <tree string="Items" >
                                            <field name="sequence" widget="handle" />
                                            <field name="type" />
                                            <field name="field_id" />
                                            <field name="attr_string" />
                                            <field name="attr_filter_domain" />
                                            <field name="attr_domain" />
                                            <field name="group_field_id" />
                                            <field name="group_id" />
                                        </tree>
                                    </field>
                                </page>
                                <page string="Arch">
                                    <group>
                                        <group></group>
                                        <group>
                                            <field name="search_view_custom_arch" />
                                        </group>
                                    </group>
                                    <field name="search_view_arch" nolabel="1" widget="ace" theme="tomorrow" mode="xml" style="min-height:200px" attrs="{'readonly': [('search_view_custom_arch', '=', False)]}"/>
                                </page>
                            </notebook>
                        </page>
                        <page string="Graph View" attrs="{'invisible': [('graph_view', '=', False)]}">
                            <group>
                                <group>
                                    <field name="graph_attr_string" attrs="{'required': [('graph_view', '=', True)], 'readonly': [('graph_view', '=', False)]}"/>
                                    <field name="graph_view_id" attrs="{'required': [('graph_view', '=', True)], 'readonly': [('graph_view', '=', False)]}" />
                                </group>
                                <group>
                                    <field name="graph_attr_type" />
                                    <field name="graph_attr_stacked" />
                                    <field name="graph_attr_orientation" attrs="{'readonly': [('graph_attr_type', 'not in', ['bar', 'pivot'])], 'invisible': [('graph_attr_type', 'not in', ['bar', 'pivot'])]}"/>
                                </group>
                            </group>
                            <notebook>
                                <page string="Fields">
                                    <field name="graph_field_ids" nolabel="1" >
                                        <tree string="Fields" context="{'default_special_states_field_id': parent.special_states_field_id}">
                                            <field name="sequence" widget="handle" />
                                            <field name="field_id" />
                                            <field name="operator" />
                                            <field name="type" />
                                            <field name="interval" />
                                        </tree>
                                    </field>
                                </page>
                                <page string="Arch">
                                    <field name="graph_view_arch" nolabel="1" widget="ace" theme="tomorrow" mode="xml" style="min-height:200px"/>
                                </page>
                            </notebook>
                        </page>
                        <page string="Calendar View" attrs="{'invisible': [('calendar_view', '=', False)]}">
                            <group>
                                <group>
                                    <field name="calendar_attr_string" attrs="{'required': [('calendar_view', '=', True)], 'readonly': [('calendar_view', '=', False)]}"/>
                                    <field name="calendar_view_id" attrs="{'required': [('calendar_view', '=', True)], 'readonly': [('calendar_view', '=', False)]}" />
                                </group>
                                <group>
                                </group>
                            </group>
                            <notebook>
                                <page string="Options">
                                    <group>
                                        <group string="Date Settings">
                                            <field name="calendar_attr_date_start_ttype" invisible="1" />
                                            <field name="calendar_attr_date_start_field_id" domain="[('model_id', '=', model_id), ('ttype', 'in', ['date', 'datetime'])]" attrs="{'required': [('calendar_view', '=', True)]}" options="{'no_create': True}"/>
                                            <field name="calendar_attr_date_stop_field_id" domain="[('model_id', '=', model_id), ('ttype', 'in', ['date', 'datetime'])]" options="{'no_create': True}"/>
                                            <field name="calendar_attr_day_length_field_id" domain="[('model_id', '=', model_id), ('ttype', 'in', ['integer', 'float'])]" options="{'no_create': True}"/>
                                            <field name="calendar_attr_date_delay_field_id" domain="[('model_id', '=', model_id), ('ttype', 'in', ['integer', 'float'])]" options="{'no_create': True}"/>
                                            <field name="calendar_attr_all_day" attrs="{'invisible': [('calendar_attr_date_start_ttype', 'in', ['date'])]}"/>
                                        </group>
                                        <group>
                                            <field name="calendar_attr_color_ttype" invisible="1" />
                                            <field name="calendar_attr_color_field_id" domain="[('model_id', '=', model_id)]" options="{'no_create': True}"/>
                                            <field name="calendar_attr_color_is_attendee" attrs="{'invisible': ['|', ('calendar_attr_color_ttype', 'not in', ['one2many', 'many2many', 'many2one']), ('calendar_attr_color_field_id', '=', False)], 'readonly': ['|', ('calendar_attr_color_ttype', 'not in', ['one2many', 'many2many', 'many2one']), ('calendar_attr_color_field_id', '=', False)]}"/>
                                        </group>
                                    </group>

                                </page>
                                <page string="Fields">
                                    <field name="calendar_field_ids" nolabel="1" mode="tree">
                                        <tree string="Fields" context="{'default_special_states_field_id': parent.special_states_field_id}" editable="bottom">
                                            <field name="sequence" widget="handle" />
                                            <field name="field_id" />
                                            <field name="invisible" />
                                        </tree>
                                    </field>
                                </page>
                                <page string="Arch">
                                    <group>
                                        <group></group>
                                        <group>
                                            <field name="calendar_view_custom_arch" />
                                        </group>
                                    </group>
                                    <field name="calendar_view_arch" nolabel="1" widget="ace" theme="tomorrow" mode="xml" style="min-height:200px" attrs="{'readonly': [('calendar_view_custom_arch', '=', False)]}"/>
                                </page>
                            </notebook>
                        </page>
                        <page string="Gantt View" attrs="{'invisible': [('gantt_view', '=', False)]}">

                        </page>
                    </notebook>
                    <footer>
                        <button name="action_save" string="Save &amp; Close" type="object" class="oe_highlight"/>
                        <button name="action_generate" string="Generate" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="builder_ir_model_view_config_wizard_fields_form_view">
            <field name="name">builder.ir.model.view.config.wizard.form.fields.form</field>
            <field name="model">builder.ir.model.view.config.wizard.form.fields</field>
            <field name="arch" type="xml">
                <form string="Fields">
                    <group>
                        <group>
                            <field name="special_states_field_id" invisible="1"/>
                            <field name="model_id" invisible="1"/>
                            <field name="field_id" domain="[('model_id', '=', model_id)]" options="{'no_create': True}"/>
                            <field name="field_ttype" invisible="1" />
                            <field name="widget" />
                            <field name="widget_options" attrs="{'invisible': [('widget', '=', False)]}" />
                            <field name="states" attrs="{'readonly': [('special_states_field_id', '=', False)], 'invisible': [('special_states_field_id', '=', False)]}"/>
                            <field name="page_id" domain="[('wizard_id', '=', active_id)]"/>
                            <field name="domain" attrs="{'invisible': [('field_ttype', 'not in', ['many2one', 'one2many', 'many2many'])]}"/>
                        </group>
                        <group>
                            <field name="nolabel" />
                            <field name="required" />
                            <field name="required_condition" attrs="{'invisible': [('required', '=', False)]}"/>
                            <field name="invisible" />
                            <field name="invisible_condition" attrs="{'invisible': [('invisible', '=', False)]}"/>
                            <field name="readonly" />
                            <field name="readonly_condition" attrs="{'invisible': [('readonly', '=', False)]}"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('field_ttype', 'not in', ['one2many', 'many2many'])]}">
                        <group>
                            <field name="related_field_view_type" />
                            <field name="related_field_mode"/>
                            <field name="related_field_tree_editable" attrs="{'invisible': ['|', ('field_ttype', 'not in', ['one2many', 'many2many']), '|', ('related_field_mode', 'not in', ['tree']), ('related_field_view_type', 'not in', ['default'])]}"/>
                        </group>
                        <group>
                            <field name="related_field_form_id" options="{'no_create': True}" attrs="{'required': [('related_field_view_type', '=', 'defined')], 'invisible': [('related_field_view_type', 'not in', ['defined'])], 'readonly': [('related_field_view_type', 'not in', ['defined'])]}" />
                            <field name="related_field_tree_id" options="{'no_create': True}" attrs="{'required': [('related_field_view_type', '=', 'defined')], 'invisible': [('related_field_view_type', 'not in', ['defined'])], 'readonly': [('related_field_view_type', 'not in', ['defined'])]}" />
                        </group>
                    </group>
                    <group attrs="{'invisible': [('field_ttype', 'not in', ['one2many', 'many2many'])]}">
                        <field name="related_field_arch" widget="ace" mode="xml" theme="tomorrow" style="min-height:150px" attrs="{'required': [('related_field_view_type', '=', 'custom')], 'invisible': [('related_field_view_type', 'not in', ['custom'])], 'readonly': [('related_field_view_type', 'not in', ['custom'])]}" />
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="builder_ir_model_view_config_wizard_pages_form_view">
            <field name="name">builder.ir.model.view.config.wizard.form.pages.form</field>
            <field name="model">builder.ir.model.view.config.wizard.form.pages</field>
            <field name="arch" type="xml">
                <form string="Pages">
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="builder_ir_model_view_config_wizard_search_group_view">
            <field name="name">builder.ir.model.view.config.wizard.search.group.form</field>
            <field name="model">builder.ir.model.view.config.wizard.search.group</field>
            <field name="arch" type="xml">
                <form string="Groups">
                    <group>
                        <group>
                            <field name="name" />
                            <field name="expand" />
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="builder_ir_model_view_config_wizard_statusbar_buttons_form_view">
            <field name="name">builder.ir.model.view.config.wizard.form.statusbar.buttons</field>
            <field name="model">builder.ir.model.view.config.wizard.form.statusbar.buttons</field>
            <field name="arch" type="xml">
                <form string="Buttons">
                    <group>
                        <group>
                            <field name="id" invisible="1" />
                            <field name="name" />
                            <field name="type" />
                            <field name="change_to_state" attrs="{'readonly': [('type', 'not in', ['state'])], 'invisible': [('type', 'not in', ['state'])], 'required': [('type', 'in', ['state'])]}"/>

                            <label for="action_ref"/>
                            <div>
                                <field name="action_ref" class="oe_inline"/>
                                <button name="%(act_builder_ir_action_lookup_wizard)d" class="oe_link oe_edit_only" type="action" attrs="{'invisible': [('id', '=', False)]}" context="{'target_field': 'action_ref', 'default_lookup_mode': 'ref'}">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>

                            <!--<field name="action_ref" attrs="{'readonly': [('type', 'not in', ['action'])], 'invisible': [('type', 'not in', ['action'])], 'required': [('type', 'in', ['action'])]}"/>-->
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="highlighted"/>
                            <field name="states"/>
                            <field name="method_name" attrs="{'readonly': [('type', 'not in', ['object', 'state'])], 'invisible': [('type', 'not in', ['object', 'state'])], 'required': [('type', 'in', ['object', 'state'])]}"/>
                        </group>
                    </group>
                    <field name="method_code" widget="ace" mode="python" theme="tomorrow" style="min-height:100px" attrs="{'readonly': [('type', 'not in', ['object'])], 'invisible': [('type', 'not in', ['object'])], 'required': [('type', 'in', ['object'])]}"/>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="builder_ir_model_view_config_wizard_fields_tree_view">
            <field name="name">builder.ir.model.view.config.wizard.tree.fields.form</field>
            <field name="model">builder.ir.model.view.config.wizard.tree.fields</field>
            <field name="arch" type="xml">
                <form string="Fields">
                    <group>
                        <group>
                            <field name="special_states_field_id" invisible="1"/>
                            <field name="model_id" invisible="1"/>
                            <field name="field_id" domain="[('model_id', '=', model_id), ('ttype', 'not in', ['one2many', 'many2many'])]" options="{'no_create': True}"/>
                            <field name="field_ttype" invisible="1" />
                            <field name="widget" />
                            <field name="widget_options" attrs="{'invisible': [('widget', '=', False)]}" />
                            <field name="domain" attrs="{'invisible': [('field_ttype', 'not in', ['many2one'])]}"/>
                        </group>
                        <group>
                            <field name="invisible" />
                            <field name="readonly" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="builder_ir_model_view_config_wizard_fields_graph_view">
            <field name="name">builder.ir.model.view.config.wizard.graph.fields.form</field>
            <field name="model">builder.ir.model.view.config.wizard.graph.fields</field>
            <field name="arch" type="xml">
                <form string="Fields">
                    <group>
                        <group>
                            <field name="special_states_field_id" invisible="1"/>
                            <field name="model_id" invisible="1"/>
                            <field name="field_id" domain="[('model_id', '=', model_id), ('ttype', 'not in', ['one2many', 'many2many'])]" options="{'no_create': True}"/>
                            <field name="field_ttype" invisible="1" />
                        </group>
                        <group>
                            <field name="type" />
                            <field name="operator" attrs="{'readonly': [('field_ttype', 'not in', ['integer', 'float'])], 'invisible': [('field_ttype', 'not in', ['integer', 'float'])]}"/>
                            <field name="interval" attrs="{'readonly': [('field_ttype', 'not in', ['date', 'datetime'])], 'invisible': [('field_ttype', 'not in', ['date', 'datetime'])]}"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="builder_ir_model_view_config_wizard_search_items_view">
            <field name="name">builder.ir.model.view.config.wizard.search.items.form</field>
            <field name="model">builder.ir.model.view.config.wizard.search.items</field>
            <field name="arch" type="xml">
                <form string="Items">
                    <group>
                        <group>
                            <field name="special_states_field_id" invisible="1"/>
                            <field name="model_id" invisible="1"/>
                            <field name="wizard_id" invisible="1"/>
                            <field name="field_ttype" invisible="1" />
                            <field name="type"/>
                            <field name="group_id" domain="[('wizard_id', '=', wizard_id)]" context="{'default_wizard_id': wizard_id}"/>
                            <field name="field_id" domain="[('model_id', '=', model_id)]" options="{'no_create': True}" attrs="{'invisible': ['|', ('type', 'in', ['separator']), ('type', 'not in', ['field'])], 'readonly': ['|', ('type', 'in', ['separator']), ('type', 'not in', ['field'])], 'required': [('type', 'in', ['field'])]}"/>
                            <field name="attr_string" attrs="{'required': [('type', 'in', ['filter'])], 'invisible': [('type', 'in', ['separator'])]}"/>
                            <field name="group_field_id" domain="[('model_id', '=', model_id)]" options="{'no_create': True}" attrs="{'invisible': ['|', ('type', 'in', ['separator']), ('type', 'not in', ['filter'])], 'readonly': ['|', ('type', 'in', ['separator']), ('type', 'not in', ['filter'])]}"/>
                        </group>
                        <group>
                            <field name="attr_domain" attrs="{'invisible': [('type', 'in', ['separator'])], 'readonly': [('type', 'in', ['separator'])]}"/>
                            <field name="attr_filter_domain" attrs="{'invisible': [('type', 'in', ['separator'])], 'readonly': [('type', 'in', ['separator'])]}"/>
                            <field name="attr_operator" attrs="{'invisible': [('type', 'in', ['separator'])], 'readonly': [('type', 'in', ['separator'])]}"/>
                            <field name="attr_help" attrs="{'invisible': [('type', 'in', ['separator'])], 'readonly': [('type', 'in', ['separator'])]}"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_builder_ir_model_view_config_wizard">
            <field name="name">View Generator</field>
            <field name="res_model">builder.ir.model.view.config.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>