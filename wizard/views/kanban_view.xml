<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_builder_wizard_views_kanban">
            <field name="name">builder.wizard.views.kanban</field>
            <field name="model">builder.wizard.views.kanban</field>
            <field name="arch" type="xml">
                <form string="View Generator">
                    <group>
                        <group>
                            <field name="model_id" invisible="1" />
                            <field name="attr_string" />
                            <field name="view_id"  />
                            <field name="attr_create" />
                            <field name="attr_edit"  />
                            <field name="attr_delete"  />
                        </group>
                        <group>
                            <field name="attr_quick_create"  />
                        </group>
                    </group>

                    <notebook>
                        <page string="Fields">
                            <field name="field_ids" domain="[('model_id', '=', model_id)]"/>
                        </page>
                        <page string="Template">
                            <field name="attr_template" nolabel="1" widget="ace" theme="tomorrow" mode="xml" style="min-height:200px" />
                        </page>
                        <page string="Arch">
                            <group>
                                <group></group>
                                <group>
                                    <field name="view_custom_arch" />
                                </group>
                            </group>
                            <field name="view_arch" nolabel="1" widget="ace" theme="tomorrow" mode="xml" style="min-height:200px;width:90%" attrs="{'readonly': [('view_custom_arch', '=', False)]}"/>
                        </page>
                    </notebook>

                    <footer>
                        <button name="action_generate" string="Save &amp; Generate" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_builder_wizard_views_kanban_field">
            <field name="name">builder.wizard.views.kanban.field</field>
            <field name="model">builder.wizard.views.kanban.field</field>
            <field name="arch" type="xml">
                <form string="Fields">
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_builder_wizard_views_kanban">
            <field name="name">Kanban Wizard</field>
            <field name="res_model">builder.wizard.views.kanban</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>