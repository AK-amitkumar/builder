<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_builder_wizard_views_graph">
            <field name="name">builder.wizard.views.graph</field>
            <field name="model">builder.wizard.views.graph</field>
            <field name="arch" type="xml">
                <form string="View Generator">
                    <group>
                        <group>
                            <field name="model_id" invisible="1" />
                            <field name="special_states_field_id" invisible="1"/>
                            <field name="attr_string" />
                            <field name="view_id"  />
                        </group>
                        <group>
                            <field name="attr_type" />
                            <field name="attr_stacked" />
                            <field name="attr_orientation" attrs="{'readonly': [('attr_type', 'not in', ['bar', 'pivot'])], 'invisible': [('attr_type', 'not in', ['bar', 'pivot'])]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Fields">
                            <field name="field_ids" nolabel="1" >
                                <tree string="Fields" context="{'default_special_states_field_id': parent.special_states_field_id}">
                                    <field name="sequence" widget="handle" />
                                    <field name="field_id" />
                                    <field name="operator" />
                                    <field name="type" />
                                    <field name="interval" />
                                </tree>
                            </field>
                        </page>
                        <page string="Arch">
                            <group>
                                <group></group>
                                <group>
                                    <field name="view_custom_arch" />
                                </group>
                            </group>
                            <field name="view_arch" nolabel="1" widget="ace" theme="tomorrow" mode="xml" style="min-height:200px" attrs="{'readonly': [('view_custom_arch', '=', False)]}"/>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_save" string="Save &amp; Generate" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_builder_wizard_views_graph_field">
            <field name="name">builder.wizard.views.graph.field</field>
            <field name="model">builder.wizard.views.graph.field</field>
            <field name="arch" type="xml">
                <form string="Fields">
                    <group>
                        <group>
                            <field name="special_states_field_id" invisible="1"/>
                            <field name="model_id" invisible="1"/>
                            <field name="field_id" domain="[('model_id', '=', model_id), ('ttype', 'not in', ['one2many', 'many2many'])]" options="{'no_create': True}"/>
                            <field name="field_ttype" invisible="1" />
                        </group>
                        <group>
                            <field name="type" />
                            <field name="operator" attrs="{'readonly': [('field_ttype', 'not in', ['integer', 'float'])], 'invisible': [('field_ttype', 'not in', ['integer', 'float'])]}"/>
                            <field name="interval" attrs="{'readonly': [('field_ttype', 'not in', ['date', 'datetime'])], 'invisible': [('field_ttype', 'not in', ['date', 'datetime'])]}"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_builder_wizard_views_graph">
            <field name="name">Graph View Wizard</field>
            <field name="res_model">builder.wizard.views.graph</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>