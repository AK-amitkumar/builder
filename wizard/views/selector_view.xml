<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_builder_wizard_views_selector">
            <field name="name">builder.wizard.views.selector</field>
            <field name="model">builder.wizard.views.selector</field>
            <field name="arch" type="xml">
                <form string="Wizard Selector">
                    <div class="oe_right oe_button_box" name="buttons">
                        <button class="oe_inline oe_stat_button" string="Form View" name="action_show_wizard" type="object" icon="fa-magic" context="{'view_type': 'form'}"/>
                        <button class="oe_inline oe_stat_button" string="Tree View" name="action_show_wizard" type="object" icon="fa-magic" context="{'view_type': 'tree'}"/>
                        <button class="oe_inline oe_stat_button" string="Search View" name="action_show_wizard" type="object" icon="fa-magic" context="{'view_type': 'search'}"/>
                        <button class="oe_inline oe_stat_button" string="Graph View" name="action_show_wizard" type="object" icon="fa-magic" context="{'view_type': 'graph'}"/>
                        <button class="oe_inline oe_stat_button" string="Calendar View" name="action_show_wizard" type="object" icon="fa-magic" context="{'view_type': 'calendar'}"/>
                        <button class="oe_inline oe_stat_button" string="Gantt View" name="action_show_wizard" type="object" icon="fa-magic" context="{'view_type': 'gantt'}"/>
                        <button class="oe_inline oe_stat_button" string="Kanban View" name="action_show_wizard" type="object" icon="fa-magic" context="{'view_type': 'kanban'}"/>
                    </div>
                    <footer>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_builder_wizard_views_selector">
            <field name="name">View Wizard Selector</field>
            <field name="res_model">builder.wizard.views.selector</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>