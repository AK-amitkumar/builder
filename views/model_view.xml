                                    <field name="select_level" attrs="{'readonly': [('ttype','in',['binary', 'serialized'])], 'invisible': [('ttype','in',['binary', 'serialized'])]}"/>
                                    <field name="translate" attrs="{'readonly': [('ttype','not in',['char','html', 'text'])], 'invisible': [('ttype','not in',['char','html', 'text'])]}"/>
                                </group>
                                <group>
                                    <field name="selection" attrs="{'required': [('ttype','in',['selection','reference'])], 'readonly': [('ttype','not in',['selection','reference'])], 'invisible': [('ttype','not in',['selection'])]}"/>
                                    <field name="size" attrs="{'required': [('ttype','in',['char','reference'])], 'readonly': [('ttype','not in',['char','reference'])], 'invisible': [('ttype','not in',['char','reference'])]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Relation" attrs="{'invisible': [('ttype', 'not in', ['many2one','one2many','many2many'])]}">
                            <group>
                                <group>
                                    <field name="relation" invisible="1"/>
                                    <!--<field name="relation" readonly="1" attrs="{'required': [('ttype','in',['many2one','one2many','many2many'])], 'invisible': [('ttype', 'not in', ['many2one','one2many','many2many'])]}"/>-->
                                    <field name="relation_field" attrs="{'required': [('ttype','=','one2many')], 'readonly': [('ttype','!=','one2many')], 'invisible': [('ttype', 'not in', ['one2many'])]}"/>

                                    <field name="relation_many2many_relation" attrs="{'required': [('ttype','=','many2many')], 'readonly': [('ttype','!=','many2many')], 'invisible': [('ttype', 'not in', ['many2many'])]}"/>
                                    <field name="relation_many2many_column1" attrs="{'required': [('ttype','=','many2many')], 'readonly': [('ttype','!=','many2many')], 'invisible': [('ttype', 'not in', ['many2many'])]}"/>
                                    <field name="relation_many2many_column2" attrs="{'required': [('ttype','=','many2many')], 'readonly': [('ttype','!=','many2many')], 'invisible': [('ttype', 'not in', ['many2many'])]}"/>
                                </group>
                                <group>
                                    <field name="relation_create_inverse_relation"/>
